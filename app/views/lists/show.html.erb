<div class="container">
  <h1 class="colorfull"><%= @list.name %></h1>

  <h2>Movies:</h2>
  <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-product">
          <%= image_tag bookmark.movie.poster_url, alt:'poster'  %>
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title  %></h2>
            <p>Rating: <%= bookmark.movie.rating.round(1)  %></p>
            <p><%= link_to 'Delete',
                      bookmark_path(bookmark),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: 'btn btn-danger'  %>
            </p>
          </div>
        </div>
      <% end %>
  </div>
  <hr>
  <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: 'btn btn-success' %> |
  <%= link_to 'Back', lists_path, class: 'btn' %>
</div>
